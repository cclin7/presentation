\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
When the 
\begin_inset Formula $t$
\end_inset

 represents a short interval, or 
\begin_inset Formula $g$
\end_inset

 is small 
\begin_inset Formula 
\[
y\left(t\right)=y_{0}e^{gt}\simeq y_{0}\left(1+g\right)^{t}
\]

\end_inset

 ex: 
\begin_inset Formula $g=0.01$
\end_inset

, 
\begin_inset Formula $t=3$
\end_inset


\begin_inset Formula 
\begin{align*}
y(3) & =y_{0}e^{g3}=y_{0}\times1.030455\\
y_{3} & =y_{0}\left(1+g\right)^{t}=y_{0}\times1.03030
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
EX 1: the discounted utility in a discrete time model, 
\begin_inset Formula 
\begin{align*}
\frac{1}{\left(1+\rho\right)^{t}}U\left(C_{t}\right) & =\left(1+\rho\right)^{-t}U\left(C_{t}\right)\simeq e^{-\rho t}U\left(C_{t}\right)
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize
Ex 2: The present value of 
\begin_inset Formula $I$
\end_inset

 in 
\begin_inset Formula $t$
\end_inset

 periods 
\begin_inset Formula 
\[
\frac{I}{\left(1+r\right)^{t}}\simeq e^{-rt}I
\]

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator parbreak
\end_inset


\end_layout

\begin_layout Frame
\begin_inset Argument 4
status open

\begin_layout Plain Layout
Appendix—continuous time approximation
\end_layout

\end_inset


\begin_inset Separator latexpar
\end_inset


\end_layout

\begin_deeper
\begin_layout Itemize
The definition of 
\begin_inset Formula $e\left(x\right)$
\end_inset

 is given by 
\begin_inset Formula 
\[
e^{x}=\lim_{n\rightarrow\infty}\left(1+\frac{x}{n}\right)^{\frac{n}{x}}
\]

\end_inset

That is, the annual yields given the annual interest rate 
\begin_inset Formula $x$
\end_inset

, compounded 
\begin_inset Formula $n$
\end_inset

 times.
\end_layout

\begin_layout Itemize
For 
\begin_inset Formula $t$
\end_inset

 years, 
\begin_inset Formula 
\begin{align*}
e^{tx} & =\lim_{n\rightarrow\infty}\left(1+\frac{x}{n}\right)^{\frac{n}{x}t}=\left(\lim_{n\rightarrow\infty}\left(1+\frac{x}{n}\right)^{\frac{n}{x}}\right)^{t}=\left(e^{x}\right)^{t}=e^{tx}
\end{align*}

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
\begin_inset Separator parbreak
\end_inset


